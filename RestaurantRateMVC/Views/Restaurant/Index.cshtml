@model IEnumerable<RestaurantRateMVC.Models.Restaurant>

@{
    ViewBag.Title = "Restaurant Rater";
}

<h2>Restaurants</h2>

<p>
    @Html.ActionLink("Rate a Restuarant", "Create")
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Rating)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FoodType)
        </th>
        <th></th>
    </tr>
    @foreach(var restaurant in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(item => restaurant.Name)
            </td>
            <td>
                @Html.DisplayFor(item => restaurant.Rating)
            </td>
            <td>
                @Html.DisplayFor(item => restaurant.FoodType)
            </td>
            <td>
                @Html.ActionLink("Update", "Edit", new { id = restaurant.RestaurantID }) |
                @Html.ActionLink("More Info", "Details", new { id = restaurant.RestaurantID }) |
                @Html.ActionLink("Delete", "Delete", new { id = restaurant.RestaurantID })
            </td>
        </tr>
    }
</table>
